mixin component_js (name)
 - var new_name = name.replace(/^(\/|)(.+)/, '$1');
 script(type="text/javascript", src="components/#{name}")

mixin component_css (type, name)
 - var new_type = type.replace(/^(\/|)(.+)/, '$2');
 - var new_name = name.replace(/^(\/|)(.+)/, '$2');
 link(rel="stylesheet", href="components/#{type}/#{name}")
 link(rel="stylesheet", href="components/bower/ui-select/dist/select.css")

mixin css (name)
 - var new_name = name.replace(/^(\/|)(.+)/, '$2');
 link(rel="stylesheet", href="#{name}")

mixin controller (name)
 - var new_name = name.replace(/^(\/|)(.+)/, '$2');
 script(type="text/javascript", src="js/controllers/#{name}")

mixin service (name)
 - var new_name = name.replace(/^(\/|)(.+)/, '$2');
 script(type="text/javascript", src="js/services/#{name}")


